<Ui xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/">	
	<Font name="gtdFont" font="Fonts\ARIALN.TTF" inherits="GameFontNormal">
		<FontHeight  val="12" />      			
	</Font>
	<Frame name="Frame1" parent="UIParent" toplevel="true" movable="true" frameStrata="MEDIUM" enableMouse="true" enableKeyboard="true">
		<Size x="400" y="220" />
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<KeyValues>
			<KeyValue key="backdropInfo" value="BACKDROP_DIALOG_32_32" keyType="string" type="global" />
		</KeyValues>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="32" />
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="Frame1Header" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="300" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString name="gtdMainTitle" inherits="gtdFont" text="GTD|cffffaa00ROLL|r:Admin">
					<Anchors>
						<Anchor point="TOP" relativeTo="Frame1">
							<Offset>
								<AbsDimension x="0" y="-2"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY">
				<FontString inherits="gtdFont" text="Добавление\удаление progress-points всем, кто в рейде |cffaaaaaa(даже, если offline)|r:">
					<Size x="200" y="28" />
					<Anchors>
						<Anchor point="TOP">
							<Offset x="-45" y="-25" />
						</Anchor>
					</Anchors>
				</FontString>				
				<FontString inherits="gtdFont" text="Начислить игроку:">
					<Size x="111" y="20" />
					<Anchors>
						<Anchor point="LEFT" inherits="CENTER">
							<Offset x="30" y="40" />
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString inherits="gtdFont" text="Wisp себе при начислении pp:">
					<Size x="185" y="20" />
					<Anchors>
						<Anchor point="CENTER">
							<Offset x="-10" y="-55" />
						</Anchor>
					</Anchors>
				</FontString>
				<FontString inherits="gtdFont" text="Wisp себе при уловках игроков:">
					<Size x="185" y="20" />
					<Anchors>
						<Anchor point="CENTER" >
							<Offset x="-10" y="-35" />
						</Anchor>
					</Anchors>					
					
				</FontString>
				<FontString name="gtd_StartCountAddedPP" inherits="gtdFont" text="">
					<Size x="50" y="20" />
					<Anchors>
						<Anchor point="CENTER">
							<Offset x="-8" y="0" />
						</Anchor>
					</Anchors>	
				</FontString>
				<FontString inherits="gtdFont" text="\">
					<Size x="50" y="20" />
					<Anchors>
						<Anchor point="CENTER">
							<Offset x="0" y="0" />
						</Anchor>
					</Anchors>					
					
				</FontString>
				<FontString name="gtd_AddedPpRaidSession" inherits="gtdFont" text="">
					<Size x="50" y="20" />
					<Anchors>
						<Anchor point="CENTER">
							<Offset x="6" y="0" />
						</Anchor>
					</Anchors>					
					
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<EditBox name="EnteredValue" inherits="InputBoxTemplate" letters="5">
				<Size x="40" y="20" />
				<Anchors>
					<Anchor y="20" point="TOP">
						<Offset x="67" y="-15" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						this:SetAutoFocus(false);
						this:SetTextInsets(0, 8, 0, 0);
						this:SetNumeric();
						this:SetNumber(1);
						this:SetScale(1.5)
					</OnLoad>
				</Scripts>
			</EditBox>
			<Button inherits="UIPanelButtonTemplate" enableMouseClicks="true" text="Добавить :)">
				<Size x="150" y="40" />
				<Anchors>
					<Anchor point="CENTER" relativePoint="LEFT">
						<Offset x="90" y="3" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						StaticPopup_Show("CONFIRM_ADD", EnteredValue:GetNumber())
					</OnClick>
				</Scripts>
				<ButtonText font="Fonts\FRIZQT__.TTF">
					<FontHeight val="14" />
					<Color r="0" g="1" b="0"/>
				</ButtonText>
			</Button>
			<Button inherits="UIPanelButtonTemplate" enableMouseClicks="true" text="Удалить :(">
				<Size x="150" y="40" />
				<Anchors>
					<Anchor point="CENTER" relativePoint="RIGHT">
						<Offset x="-90" y="3" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						StaticPopup_Show("CONFIRM_REMOTE", EnteredValue:GetNumber())						
					</OnClick>
				</Scripts>
				<ButtonText font="Fonts\FRIZQT__.TTF">
					<FontHeight val="14" />	
					<Color r="1" g="1" b="1"/>				
				</ButtonText>
			</Button>
			<Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="Frame1" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="-10" y="-10" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
  			    	    Frame1:Hide();
            			if RatingFrame then
            				RatingFrame:Hide()
            			end
          			</OnClick>
				</Scripts>
			</Button>
			<Button name="HelpButton" inherits="UIPanelButtonTemplate" text="?">
				<Size x="20" y="20" />
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT">
						<Offset x="18" y="-15" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						HelpButton_OnClick()
					</OnClick>
				</Scripts>
			</Button>
			<EditBox name="EnteredName" inherits="InputBoxTemplate" autoFocus="false">
				<Size x="100" y="25" />
				<Anchors>
					<Anchor point="CENTER">
						<Offset x="-5" y="40" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						this:SetText("")						
					</OnShow>
				</Scripts>
			</EditBox>	
			<Button inherits="UIPanelButtonTemplate" text="Взять с таргета">
				<ButtonText font="Fonts\ARIALN.TTF">
					<FontHeight>
						<AbsValue val="11" />
					</FontHeight>
				</ButtonText>
				<Size x="109" y="23" />
				<Anchors>
					<Anchor point="CENTER"> 
						<Offset x="103" y="40" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GTDA_SetNameFromTarget()
					</OnClick>
				</Scripts>
			</Button>	
            <Button name="MessageToWisperAbuse" inherits="UIPanelButtonTemplate" text="">				
				<ButtonText font="Fonts\ARIALN.TTF">
					<FontHeight>
						<AbsValue val="11" />
					</FontHeight>
				</ButtonText>
				<Size x="24" y="18" />
				<Anchors>
					<Anchor point="CENTER">
						<Offset x="90" y="-36"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						 GTDA_SetWisperAbuse()           
					</OnClick>
				</Scripts>
			</Button>
            <Button name="MessageToWisperPP" inherits="UIPanelButtonTemplate" text="">
				<ButtonText font="Fonts\ARIALN.TTF">
					<FontHeight>
						<AbsValue val="11" />
					</FontHeight>
				</ButtonText>
				<Size x="24" y="20" />
				<Anchors>
					<Anchor point="CENTER" >
						<Offset x="85" y="-56" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GTDA_SetWisperPP()         
					</OnClick>
				</Scripts>
			</Button>			
			<Button inherits="UIPanelButtonTemplate" text="PP-Рейтинг">
				<ButtonText font="Fonts\ARIALN.TTF">
					<FontHeight>
						<AbsValue val="11" />
					</FontHeight>
				</ButtonText>
				<Size x="120" y="23" />
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset x="16" y="16" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GTDA_OpenRatingScrollFrame()
					</OnClick>
				</Scripts>
			</Button>
			<Button inherits="UIPanelButtonTemplate" text="Очистить лог">
				<ButtonText font="Fonts\ARIALN.TTF">
					<FontHeight>
						<AbsValue val="11" />
					</FontHeight>
				</ButtonText>
				<Size x="80" y="23" />
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset x="0" y="16" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GTD_START_COUNT_ADDED_PP, GTD_ADDED_PP_RAID_SESSION	= 0					
					</OnClick>
				</Scripts>
			</Button>
			<Button inherits="UIPanelButtonTemplate" text="Как выглядят Wisp?">
				<ButtonText font="Fonts\ARIALN.TTF">
					<FontHeight>
						<AbsValue val="11" />
					</FontHeight>
				</ButtonText>
				<Size x="120" y="23" />
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-15" y="16" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GTDA_DebugOfWispers()     
					</OnClick>
				</Scripts>
			</Button>

		</Frames>
		<Scripts>
			<OnLoad inherit="append">
				Frame1_OnLoad()				        
				this:Hide()
				this:RegisterForDrag("LeftButton");
				this:SetMovable(1);
				--скрываем по ESC
				tinsert(UISpecialFrames, this:GetName()); 
				tinsert(UISpecialFrames, "gtda_RatingFrame"); 
			</OnLoad>
			<OnDragStart>
				this:StartMoving();
				this.isMoving = true;
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
				this.isMoving = false;
			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>